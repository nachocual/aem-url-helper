  "version": "0.2.0",
  "description": "Helps you disable WCM and the Content Finder on AEM (CQ) pages",
  "background": {
    "scripts": ["background.js"],
  	"persistent": false
  },
  "page_action" : {},
  "permissions" : [
    "webNavigation",
    "storage"
  ],
  "icons": {
    "16": "aem_green_16.png",
    "48": "aem_green_48.png",
    "128": "aem_green_128.png"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "manifest_version": 2
}
